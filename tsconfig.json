{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "allowUnreachableCode": false,
    "noImplicitAny": false,
    "allowUnusedLabels": false,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,

    "lib": ["es2020"],
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "node",
    
    "rootDir": ".",
    "outDir": "build",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "test/**/*.ts"
  ]
}
